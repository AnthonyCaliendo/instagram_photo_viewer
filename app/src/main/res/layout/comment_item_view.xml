<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/comment_item_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/comment_item_commenter_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_alignTop="@id/comment_item_profile_image"
        android:textColor="@color/colorProminent"
        android:layout_toRightOf="@id/comment_item_profile_image"/>

    <TextView
        android:id="@+id/comment_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/colorSubdued"
        android:layout_below="@id/comment_item_commenter_username"
        android:layout_toRightOf="@id/comment_item_profile_image"/>

</RelativeLayout>